@model RegisterViewModel
<h3>
    Register
</h3>

<form method="post" asp-controller="Authentication" asp-action="Register">
    <div class="form-group">
        <label class ="sr-only">Email</label>
        <input class="form-control" type="text" asp-for="Email" />
    </div>

    <div class="form-group">
        <label class ="sr-only">Password</label>
        <input class="form-control" type="password" asp-for="Password" />
    </div>

    <div class="form-group">
        <label class="sr-only">Confirm password</label>
        <input class="form-control" type="password" asp-for="ConfirmPassword" />
    </div>

    <div class="form-group">
        <input class="btn btn-primary" type="submit" />
    </div>
</form>