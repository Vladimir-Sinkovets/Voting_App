@model RegisterViewModel

<form method="post" asp-controller="Authentication" asp-action="Login">
    <h3>
        Login
    </h3>
    <div>
        <label>Email</label>
        <input type="text" asp-for="Email" />
    </div>
    <div>
        <label>Password</label>
        <input type="password" asp-for="Password" />
    </div>
    <div>
        <input type="submit"/>
    </div>
</form>